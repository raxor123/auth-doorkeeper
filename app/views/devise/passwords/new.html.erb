<div class="contenedor-formularios">
    <ul class="contenedor-tabs">
        <li class="tab tab-segunda active"><a style="font-size: 18px;" href="#iniciar-sesion">Recuperación de contraseña</a></li>
        <li class="tab tab-primera" style="display: none">
          <!-- <%= link_to "Volver", root_path, style: "font-size: 18px;" %> -->

        </li>
    </ul>
    <div class="contenido-tab">
        <div id="iniciar-sesion">

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>


              <div class="contenedor-input">
                  <label>
                      Correo electrónico <span class="req">*</span>
                  </label>
                <%= f.email_field :email, autofocus: true %>
            </div>
              <%= f.submit "Enviarme las instrucciones", id:"submit-pass"%>
            <% end %>
        </div>

        <!-- Registrarse -->
        <div id="registrarse">
            <h1>Registrarse</h1>
        </div>
  </div>
</div>
